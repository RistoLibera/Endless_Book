
<div class="mt-3">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'is-block is-fullwidth has-text-centered' %><br />
  <% end %>
</div>

<div style="border-bottom: 1px solid #dadde1; display: flex; margin: 5px 16px; text-align: center;"></div>

<div class="mt-5 pb-4 is-flex is-justify-content-center">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Create New Account", new_registration_path(resource_name), class: 'button  is-success is-medium has-text-weight-medium  has-text-centered' %><br />
  <% end %>
</div>



