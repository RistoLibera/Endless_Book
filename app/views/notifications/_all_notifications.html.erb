<!-- Should have floating icon -->
<div class="dropdown">
  <button class="dropbtn">Notif</button>
  <div class="dropdown-content" >
    <p><%= link_to 'Clear all', clear_user_path(current_user), method: 'get', class: "nav-link" %></p> 
    <% if current_user.notifications.any? %>
      <% current_user.notifications.unseen.recent.each do |notif| %>
        <%= link_to notif.url do %>
          <p><%= notif.sender_id.to_s + " " + notif.message %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
